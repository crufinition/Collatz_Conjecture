def collatz(n):
  assert type(n) == int
  if n % 2 == 0:
    n = int(n/2)
  elif n != 1:
    n = int((n*3+1)/2)
  else:
    return 1
  return n

while True:
  n = int(input("Enter an interger (a poistive number): "))
  while n != 1:
    n = collatz(n)
    print(n)
  print("=== Simulation End ===\n")
